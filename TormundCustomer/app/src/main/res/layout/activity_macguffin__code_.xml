<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
android:gravity="center_vertical"
    tools:context=".Macguffin_Code_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/tormoundstylist"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu codigo"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:paddingTop="10dp">
          <EditText
              android:id="@+id/edit1"
              android:layout_marginLeft="0dp"
              android:layout_width="70dp"
              android:textAlignment="center"
              android:textSize="35dp"
              android:textStyle="bold"
              android:nextFocusForward="@+id/edit2"
              android:background="@drawable/roundedbtn"
              android:layout_height="70dp"
              android:maxLength="1">

          </EditText>
          <EditText
              android:id="@+id/edit2"
              android:layout_width="70dp"
              android:layout_marginLeft="20dp"
              android:textAlignment="center"
              android:textSize="35dp"
              android:textStyle="bold"
              android:nextFocusForward="@+id/edit3"
              android:background="@drawable/roundedbtn"
              android:layout_height="70dp"
              android:maxLength="1">
          </EditText>
          <EditText
              android:id="@+id/edit3"
              android:layout_width="70dp"
              android:textAlignment="center"
              android:textSize="35dp"
              android:nextFocusForward="@+id/edit4"
              android:layout_marginLeft="20dp"
              android:textStyle="bold"
              android:background="@drawable/roundedbtn"
              android:layout_height="70dp"
              android:maxLength="1"/>
          <EditText
              android:id="@+id/edit4"
              android:layout_marginLeft="20dp"
              android:layout_width="70dp"
              android:textAlignment="center"
              android:textSize="35dp"
              android:textStyle="bold"
              android:background="@drawable/roundedbtn"
              android:nextFocusForward="@+id/btn_continuar"
              android:layout_height="70dp"
              android:maxLength="1"/>
      </LinearLayout>
        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="INGRESAR"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textColor="@color/colorFont"
            android:background="@drawable/rounded_button"

            />
        </LinearLayout>



</RelativeLayout>
